# Permitir CORS para todas las respuestas
<IfModule mod_headers.c>
    Header always set Access-Control-Allow-Origin "*"
    Header always set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
    Header always set Access-Control-Allow-Headers "Content-Type, Authorization"
</IfModule>

# Activa el motor de rewrites
RewriteEngine On

# Sirve index.php como DirectoryIndex
DirectoryIndex index.php

# Si no es un archivo real…
RewriteCond %{REQUEST_FILENAME} !-f
# …y no es un directorio real
RewriteCond %{REQUEST_FILENAME} !-d
# entonces reescribe la URL a index.php, pasándole la ruta original
RewriteRule ^(.*)$ index.php/$1 [QSA,L]
